   public static void main(String args[]){
		CSAA2 csaa2 = new CSAA2();
		csaa2.setLayout(new GridLayout(12,1));
		csaa2.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		csaa2.setSize(900,1000);
		csaa2.setLocation(300,300);
		csaa2.setVisible(true);
		csaa2.getContentPane().setBackground(Color.LIGHT_GRAY);
		csaa2.setResizable(false);	
	}

}
